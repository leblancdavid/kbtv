{
  "paths": {
    "dialogue_arcs": "../../kbtv/Assets/Data/Dialogue/Arcs",
    "vern_dialogue": "../../kbtv/Assets/Data/Dialogue/Vern/VernDialogue.json",
    "output_dir": "../../kbtv/Assets/Audio/Voice",
    "temp_dir": "./temp",
    "manifest": "../../kbtv/Assets/Data/Dialogue/voice_manifest.json"
  },
  "audio": {
    "sample_rate": 22050,
    "output_format": "ogg",
    "ogg_quality": 6,
    "normalize_target_dbfs": -20,
    "silence_trimming": {
      "enabled": true,
      "threshold_db": -40,
      "padding_ms": 100
    }
  },
  "voices": {
    "vern": {
      "model": "en_US-joe-medium",
      "description": "American male voice for late-night radio host",
      "mood_adjustments": {
        "Tired": { "speed": 1.2, "pitch": 0.95 },
        "Grumpy": { "speed": 1.3, "pitch": 0.97 },
        "Neutral": { "speed": 1.3, "pitch": 0.97 },
        "Engaged": { "speed": 1.35, "pitch": 0.98 },
        "Excited": { "speed": 1.45, "pitch": 1.0 }
      }
    },
    "callers": {
      "default_male": {
        "model": "en_US-lessac-medium",
        "description": "Clear, neutral male voice",
        "speed": 1.0,
        "pitch": 1.0
      },
      "default_female": {
        "model": "en_US-amy-medium",
        "description": "Clear, neutral female voice",
        "speed": 1.0,
        "pitch": 1.0
      },
      "gruff": {
        "model": "en_US-ryan-low",
        "description": "Deeper, older male voice",
        "speed": 0.9,
        "pitch": 0.95
      },
      "nervous": {
        "model": "en_US-libritts-high",
        "description": "Higher pitch, younger voice",
        "speed": 1.1,
        "pitch": 1.05
      },
      "enthusiastic": {
        "model": "en_US-lessac-medium",
        "description": "Excited, fast-talking",
        "speed": 1.2,
        "pitch": 1.03
      },
      "conspiracy": {
        "model": "en_US-ryan-medium",
        "description": "Intense, rapid delivery",
        "speed": 1.15,
        "pitch": 1.0
      }
    },
    "caller_archetype_mapping": {
      "UFOs": ["default_male", "enthusiastic", "nervous"],
      "Cryptids": ["gruff", "default_male", "nervous"],
      "Conspiracies": ["conspiracy", "nervous", "default_male"],
      "Ghosts": ["default_female", "nervous", "gruff"]
    }
  },
  "text_processing": {
    "strip_placeholders": true,
    "placeholder_replacements": {
      "{callerName}": "caller",
      "{callerLocation}": "out there",
      "{topic}": "the topic"
    },
    "strip_stage_directions": true,
    "stage_direction_pattern": "\\*[^*]+\\*"
  }
}
